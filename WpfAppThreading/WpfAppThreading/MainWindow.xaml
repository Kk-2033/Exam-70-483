<Window x:Class="WpfAppThreading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppThreading"
        mc:Ignorable="d"
        Title="Threading" Height="350" Width="530.085">
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="171*"/>
            <RowDefinition Height="149*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="resultsTextBox" HorizontalAlignment="Left" Height="250" Margin="10,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="500" Grid.RowSpan="2" FontFamily="Lucida Console"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Margin="10,10,0,0" Height="45" Click="startButton_Click"/>
    </Grid>
</Window>
